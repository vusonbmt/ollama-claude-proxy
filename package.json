    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:vusonbmt/ollama-claude-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/vusonbmt/ollama-claude-proxy/issues"
